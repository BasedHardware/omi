# ==============================================================================
# Omi Backend - Local Development Environment
# ==============================================================================
# Copy this to .env and fill in your API keys.
# All infrastructure services (Firebase, Redis, Typesense, Qdrant) are
# pre-configured for docker compose local deployment.
# ==============================================================================

# --- Google Cloud / Firebase Emulator ---
GOOGLE_CLOUD_PROJECT=demo-omi-local
FIRESTORE_EMULATOR_HOST=firebase-emulator:8080
FIREBASE_AUTH_EMULATOR_HOST=firebase-emulator:9099
STORAGE_EMULATOR_HOST=http://firebase-emulator:9199

# --- Redis ---
REDIS_DB_HOST=redis
REDIS_DB_PORT=6379
# REDIS_DB_PASSWORD is intentionally unset â€” local Redis has no auth.
# Setting it to empty string would cause AUTH failures.

# --- Typesense ---
TYPESENSE_HOST=typesense
TYPESENSE_HOST_PORT=8108
TYPESENSE_PROTOCOL=http
TYPESENSE_API_KEY=local-dev-key

# --- Qdrant (replaces Pinecone) ---
QDRANT_HOST=qdrant
QDRANT_PORT=6333

# --- OpenAI (REQUIRED - you must fill this in) ---
OPENAI_API_KEY=

# --- Storage Buckets (emulator uses these as bucket names) ---
BUCKET_SPEECH_PROFILES=omi-speech-profiles
BUCKET_POSTPROCESSING=omi-postprocessing
BUCKET_MEMORIES_RECORDINGS=omi-memories-recordings
BUCKET_PRIVATE_CLOUD_SYNC=omi-private-cloud-sync
BUCKET_TEMPORAL_SYNC_LOCAL=omi-temporal-sync
BUCKET_PLUGINS_LOGOS=omi-plugins-logos
BUCKET_APP_THUMBNAILS=omi-app-thumbnails
BUCKET_CHAT_FILES=omi-chat-files
BUCKET_DESKTOP_UPDATES=omi-desktop-updates

# --- Admin ---
ADMIN_KEY=local-admin-key
WORKFLOW_API_KEY=local-workflow-key

# --- Encryption ---
ENCRYPTION_SECRET=omi_local_dev_secret_key_for_testing_only_do_not_use_in_production

# --- Optional: OpenRouter (for Gemini models) ---
OPENROUTER_API_KEY=

# --- Optional: Deepgram STT ---
DEEPGRAM_API_KEY=

# --- Optional: Stripe ---
STRIPE_API_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_CONNECT_WEBHOOK_SECRET=
STRIPE_UNLIMITED_MONTHLY_PRICE_ID=
STRIPE_UNLIMITED_ANNUAL_PRICE_ID=

# --- Optional: GitHub ---
GITHUB_TOKEN=

# --- Optional: Pusher (real-time features) ---
HOSTED_PUSHER_API_URL=

# --- Optional: Google OAuth ---
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# --- Optional: Apple OAuth ---
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

# --- Optional: Integration OAuth ---
WHOOP_CLIENT_ID=
WHOOP_CLIENT_SECRET=
NOTION_CLIENT_ID=
NOTION_CLIENT_SECRET=
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=
TODOIST_CLIENT_ID=
TODOIST_CLIENT_SECRET=
ASANA_CLIENT_ID=
ASANA_CLIENT_SECRET=
CLICKUP_CLIENT_ID=
CLICKUP_CLIENT_SECRET=
GOOGLE_TASKS_CLIENT_ID=
GOOGLE_TASKS_CLIENT_SECRET=

# --- Optional: Maps ---
GOOGLE_MAPS_API_KEY=

# --- Optional: LangSmith ---
LANGSMITH_TRACING=false
LANGSMITH_API_KEY=

# --- Optional: Other APIs ---
PERPLEXITY_API_KEY=
