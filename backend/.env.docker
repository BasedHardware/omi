# Docker Compose Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# REQUIRED CONFIGURATION
# ============================================

# Core Configuration
BASE_API_URL=http://localhost:8000
ADMIN_KEY=your-secure-admin-key-change-this

# OpenAI
OPENAI_API_KEY=sk-proj-your-key-here

# Redis (using docker-compose redis service)
# DO NOT SET these in Coolify - docker-compose handles them automatically
REDIS_DB_HOST=redis
REDIS_DB_PORT=6379
REDIS_DB_PASSWORD=

# Typesense (using docker-compose typesense service)
# DO NOT SET TYPESENSE_HOST/PORT in Coolify - docker-compose handles them automatically
TYPESENSE_HOST=typesense
TYPESENSE_HOST_PORT=8108
TYPESENSE_API_KEY=your-typesense-api-key-here

# Speech-to-Text (at least one required)
DEEPGRAM_API_KEY=your-deepgram-key
SONIOX_API_KEY=your-soniox-key

# Pinecone Vector Database
PINECONE_API_KEY=your-pinecone-key
PINECONE_INDEX_NAME=your-index-name

# Google Cloud Storage Buckets
BUCKET_SPEECH_PROFILES=gs://your-bucket-speech-profiles
BUCKET_BACKUPS=gs://your-bucket-backups
BUCKET_PLUGINS_LOGOS=gs://your-bucket-plugins-logos

# ============================================
# GOOGLE CLOUD AUTHENTICATION
# ============================================
# REQUIRED: Set SERVICE_ACCOUNT_JSON with minified JSON
# Steps:
#   1. Minify your credentials: cat google-credentials.json | jq -c
#   2. Paste the output as SERVICE_ACCOUNT_JSON value below
#
# The backend will automatically create /app/google-credentials.json from this env var

SERVICE_ACCOUNT_JSON={"type":"service_account","project_id":"your-project",...}

# REQUIRED: Google Cloud Project ID (for authorized_user credentials or if not in service account JSON)
# Set this to your GCP project ID (e.g., "nooto-e2d27")
GOOGLE_CLOUD_PROJECT=your-project-id

# ============================================
# OPTIONAL SERVICES
# ============================================

# HuggingFace
HUGGINGFACE_TOKEN=hf_your-token-here

# GitHub Integration
GITHUB_TOKEN=ghp_your-token-here

# Workflow & Hume AI
WORKFLOW_API_KEY=
HUME_API_KEY=
HUME_CALLBACK_URL=

# Hosted Pusher
HOSTED_PUSHER_API_URL=

# Stripe Payments
STRIPE_API_KEY=sk_test_or_live_key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
STRIPE_CONNECT_WEBHOOK_SECRET=whsec_your-connect-webhook-secret

# Firebase OAuth
FIREBASE_API_KEY=
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Apple OAuth
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=
APPLE_PRIVATE_KEY=

# Encryption Secret (KEEP THIS SECRET AND CHANGE FROM DEFAULT!)
ENCRYPTION_SECRET=omi_CHANGE_THIS_TO_A_SECURE_RANDOM_STRING

# Perplexity
PERPLEXITY_API_KEY=

# HTTP Timeouts (milliseconds)
HTTP_GET_TIMEOUT=30000
HTTP_PUT_TIMEOUT=60000
HTTP_PATCH_TIMEOUT=60000
HTTP_DELETE_TIMEOUT=30000

# RapidAPI
RAPID_API_HOST=
RAPID_API_KEY=
