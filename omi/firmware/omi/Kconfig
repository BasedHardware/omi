source "Kconfig.zephyr"

menu "Omi Features Configuration"

config OMI_CODEC_OPUS
    bool "Opus Audio Codec"
    help
        "Enable the Opus audio codec support."
    default n

config OMI_ENABLE_OFFLINE_STORAGE
	bool "Offline SD Card Storage"
    help
        "Enable the offline storage support. Requires a SD Card."
	default n

config OMI_STORAGE_SKIP_WHEN_CONNECTED
    bool "Skip SD writes while BLE is connected"
    depends on OMI_ENABLE_OFFLINE_STORAGE
    help
        "Avoid powering the SD card when a BLE link is active and storage data is not being transferred."
    default y

config OMI_SD_IDLE_TIMEOUT_MS
    int "SD card idle power-down delay (ms)"
    depends on OMI_ENABLE_OFFLINE_STORAGE
    range 50 60000
    help
        "Time in milliseconds to keep the SD card powered after the last read/write before automatically suspending the interface."
    default 750

config OMI_STORAGE_WRITE_CHUNKS
    int "Number of SD blocks to batch per write"
    depends on OMI_ENABLE_OFFLINE_STORAGE
    range 1 8
    help
        "Aggregate this many 440-byte blocks before committing data to the SD card to reduce power-draining write bursts."
    default 4

config OMI_ENABLE_ACCELEROMETER
    bool "Accelerometer Support"
    help
        "Enable the accelerometer support."
    default n

config OMI_ENABLE_BUTTON
    bool "Button support"
    help
        "Enable the software button support."
    default n

config OMI_ENABLE_SPEAKER
    bool "Enable the speaker"
    help
        "Enable the speaker support."
    default n

config OMI_ENABLE_BATTERY
    bool "Enable the battery"
    help
        "Enable the battery support."
    default n

config OMI_ENABLE_USB
    bool "Enable the usb"
    help
        "Enable the USB power check support."
    default n

config OMI_ENABLE_HAPTIC
    bool "Enable the haptic"
    help
        "Enable the haptic support."
    default n

config OMI_ENABLE_RFSW_CTRL
    bool "Enable RFSwitch Control"
    help
        "Enable RFSwitch Control support."
    default y

endmenu
