{
    "version": 2,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 20,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "OMI",
            "displayName": "OMI",
            "configuration": "Debug",
            "hidden": false,
            "description": "Debug build for omi device",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/omi",
            "cacheVariables": {
                "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
                "CMAKE_BUILD_TYPE": "Debug",
                "BOARD": "omi/nrf5340/cpuapp",
                "CACHED_CONF_FILE": "${sourceDir}/omi.conf",
                "CONF_FILE": "${sourceDir}/omi.conf",
                "ipc_radio_CONFIG_MPSL_CX": "y"
            }
        }
    ]
}
