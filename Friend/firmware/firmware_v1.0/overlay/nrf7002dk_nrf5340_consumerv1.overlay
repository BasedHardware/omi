// };

&pinctrl {
    i2s0_default: i2s0_default {
        group1 {
            psels = <NRF_PSEL(I2S_SCK_M, 0, 12)>,    // Adjust pin numbers
                    <NRF_PSEL(I2S_LRCK_M, 0, 13)>,   // for your specific
                    <NRF_PSEL(I2S_SDOUT, 0, 14)>;    // board connections
        };
    };
};

&i2s0 {
    status = "okay";
    pinctrl-0 = <&i2s0_default>;
    pinctrl-names = "default";
    label = "I2S_0";
};