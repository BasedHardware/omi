/ {
    aliases {
        led0 = &led0;
        led1 = &led1;
        led2 = &led1; // Fake led2
        pwm-led0 = &pwm_led0;
        sw0 = &button0;
        sw1 = &button1;
        bootloader-led0 = &led0;
        mcuboot-button0 = &button0;
        mcuboot-led0 = &led0;
        watchdog0 = &wdt0;
    };

    // chosen {
    //     zephyr,bt-hci-ipc = &ipc0;  // Enable BT HCI over IPC
    // };
};

// &ipc0 {
