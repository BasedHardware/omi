source "Kconfig.zephyr"

menu "Friend Configuration"
config CODEC_OPUS
    bool "Opus Audio Codec Support"
    default n

config OFFLINE_STORAGE
	bool "Offline SD Card Storage Support"
	default n
config ACCELEROMETER
    bool "Accelerometer Support"
    default n
config ENABLE_BUTTON
    bool "Button support on Devkit2"
    default n
config ENABLE_SPEAKER
    bool "Enable the speaker!!"
    default n
endmenu

menu "Voice Interaction Options"

config ENABLE_VOICE_INTERACTION
    bool "Enable Voice Interaction"
    default n
    help
      Enable support for push-to-talk (bi-directional) voice interaction.
      This will add extra BLE characteristics and code to support a dedicated voice mode.

endmenu
